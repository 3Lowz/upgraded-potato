{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "esnext",
    "lib": ["es2022"],
    "paths": {
      "@root/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@types": ["./index.d"]
    }
  },
  "include": [
    "src/**/*",
    "index.d.ts",
    "mikro-orm.config.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/mikro-orm.config.ts",
  ]
}